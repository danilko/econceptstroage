<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="account-unit"
		transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<class>com.econcept.entities.User</class>
		<class>com.econcept.entities.UserAuthority</class>
		<class>com.econcept.entities.UserRole</class>
		<properties>
			<property name="openjpa.Log" value="Runtime=TRACE,SQL=TRACE" />
			<property name="openjpa.jdbc.DBDictionary"
				value="org.apache.openjpa.jdbc.sql.PostgresDictionary" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema" />
		</properties>
	</persistence-unit>
</persistence>